{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        // Disable the enforcement of consistent quotes in TypeScript files
       "@typescript-eslint/quotes": 0,
       // Disable the requirement of trailing commas in object literals and array literals
       "@typescript-eslint/comma-dangle": 0,
       // Disable the requirement to define React functional components in a certain way
       "react/function-component-definition": 0,
       // Disable the requirement of enforcing or disallowing newlines between braces of object literals
       "object-curly-newline": 0,
        // Disable the disallowance of JSX spreading props
       "react/jsx-props-no-spreading": 0,
       // Disable the disallowance of cyclic dependencies between import statements
       "import/no-cycle": 0,
       // Disable the disallowance of non-null asserted optional chains in TypeScript code
       "@typescript-eslint/no-non-null-asserted-optional-chain" : 0


   }
}
